<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="250dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/main">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image"

                android:scaleType="centerCrop"
                android:transitionName="vineesh_trans"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:minWidth="100dp"
                android:background="#45784e">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dob"
                    android:id="@+id/dob"
                    android:layout_margin="10dp"
                    android:textColor="#fff"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="#000"
                android:alpha=".7"
                android:layout_alignParentBottom="true">

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:textSize="25sp"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Brad Pitt"/>
            </LinearLayout>




        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_margin="5dp"
        android:textColor="#848383"
        android:textSize="16sp"
        android:text="Screen Actors Guild Award, and three Academy Award nominations in acting categories"/>
</LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>